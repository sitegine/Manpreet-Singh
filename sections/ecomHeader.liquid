{% schema %}
{
  "name": "Ecom Header",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Tisso Vison"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "buttontext",
      "label": "Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "buttonlink",
      "label": "Button Link",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "Ecom Header"
    }
  ]
}
{% endschema %}

<header class="ecom-header" style="text-align: center; padding: 30px 20px;">
  <h1>{{ section.settings.heading }}</h1>
  <p>{{ section.settings.subheading }}</p>

  <a href="{{ section.settings.buttonlink }}" class="btn  header-btn">
    {{ section.settings.buttontext }} <span class="arrow">â†’</span>
  </a>
</header>
